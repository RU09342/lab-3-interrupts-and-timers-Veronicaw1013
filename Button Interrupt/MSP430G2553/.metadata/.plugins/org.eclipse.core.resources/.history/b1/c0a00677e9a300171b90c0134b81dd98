#include <msp430.h> 
unsigned int i;
int main(void)  //Main program
{
   WDTCTL = WDTPW | WDTHOLD; // Stop watchdog timer
   P1SEL = 0;
   P1DIR |= BIT0; // Set P1.0 to output and P1.3 to input direction
   P1OUT &= ~BIT0; // set LED Off
   P1REN ^= BIT3;
   P1IE |= BIT3; // P1.3 interrupt enabled
 //  P1IES = BIT3; //Interrupt is HIGH to LOW
   P1IFG &= ~BIT3; // P1.3 interrupt flag cleared
__bis_SR_register(GIE); // Enable all interrupts (Clear GIE in SR)
 for(;;){}
 return 0;
}

#pragma vector=PORT1_VECTOR
__interrupt void Port_1(void){
    unsigned int i=0;
    for(i=0; i<20000; i++);{ //used for delay to see led blink
        if(i%10000==0){
            P1OUT ^= BIT0; //toggles LED when interupt triggered
            P1IFG &= ~BIT3; //Clears interupt flag register needed otherwise will be stuck in infinite loop
}
    }
}
